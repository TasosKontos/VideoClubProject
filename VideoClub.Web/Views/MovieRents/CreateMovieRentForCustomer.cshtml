@model  VideoClub.Web.Models.MovieRentForCustomerViewModel
@{
    ViewBag.Title = "CreateMovieRentForCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create A Movie Rent</h2>

@using (Html.BeginForm("CreateMovieRentForCustomer", "MovieRents", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4>Movie Rent</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MovieRent.ApplicationUser.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.MovieRent.ApplicationUser.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MovieRent.From, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.MovieRent.From, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MovieRent.To, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.MovieRent.To, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AvailableMovies, "Select an option:")
            @Html.DropDownListFor(model => model.SelectedMovieId, new SelectList(Model.AvailableMovies, "Id", "Title"), "Select an option", new { @class = "form-control"})
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MovieRent.Comments, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MovieRent.Comments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MovieRent.Comments, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit Rent" class="btn btn-success" />
            </div>
        </div>
    </div>

    @Html.HiddenFor(model => model.MovieRent.Comments)
    @Html.HiddenFor(model => model.MovieRent.From)
    @Html.HiddenFor(model => model.MovieRent.To)
    @Html.HiddenFor(model => model.MovieRent.ApplicationUser.Id)
}

<br />
<div>
    @Html.ActionLink("MoviesList", "ListMovies", "Movies")
</div>

