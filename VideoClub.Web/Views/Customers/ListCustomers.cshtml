@model List<VideoClub.Web.Models.Customers.ListCustomerViewModel>

<h2>Customers List</h2>

<table class="table">
    <tr>
        <th>
            UserName
        </th>
        <th>
            Name
        </th>
        <th>
            Surname
        </th>
        <th>
            Active Movie Rents
        </th>
        <th>
            View Movie Rents
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.customerUsername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customerSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.activeMovieRents)
            </td>
            <td>
                @Html.ActionLink("Movie Rents", "ListMovieRentsForCustomer", "MovieRents", new {customerId = item.customerId}, new { @class="btn btn-dark"})
            </td>
            <td>
                @Html.ActionLink("Create a Rent", "CreateMovieRentForCustomer", "MovieRents", new {customerId = item.customerId}, new { @class="btn btn-dark"})
            </td>
        </tr>
    }

</table>
